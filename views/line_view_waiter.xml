<odoo>
    <data> 
        <record model="ir.ui.view" id="bar_app.line_waiter_form">
            <field name="name">Form Line Waiter</field>
            <field name="model">bar_app.line_model</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="cuantity" />
                            <field name="product" />
                            <field name="description" />
                            <field name="state" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="bar_app.line_waiter_list">
            <field name="name">Line List Waiter</field>
            <field name="model">bar_app.line_model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="order" />
                    <field name="cuantity" />
                    <field name="product" />
                    <field name="description" />
                    <field name="state" />
                    <button name="changeStateDelivered" type="object" string="Delivered"
                            class="oe_highlight"></button>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="bar_app.action_window_line_waiter_list">
            <field name="name">Tree Line Waiter</field>
            <field name="res_model">bar_app.line_model</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[("state", "=", "D")]</field>
        </record>
    </data>
</odoo>